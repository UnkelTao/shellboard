<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "工作职称" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "公司名称" %><br>
    <%= f.text_field :company_name %>
  </div>

  <div class="field">
    <%= f.label "URL" %><br>
    <%= f.text_field :url %>
  </div>

  <div class="field">
    <%= f.label "工作类型" %><br>
    <% Job::JOB_TYPE.each_with_index do |t,i| %>
      <%= f.radio_button :job_type, i %> 
      <%= f.label :job_type, t, :value => t, :class => "inline" %>
    <% end %>
  </div>
  
  <div class="field">
    <%= f.label "工作分类" %><br>
    <% Job::OCCUPATION.each_with_index do |o,i| %>
      <%= f.radio_button :occupation, i %> 
      <%= f.label :occupation, o, :value => o, :class => "inline" %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label "工作城市" %><br>
    <% Job::CITY.each_with_index do |c,i| %>
      <%= f.radio_button :city, i %> 
      <%= f.label :city, c, :value => c, :class => "inline" %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label "工作地址" %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label "工作描述" %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label "如何应征" %><br>
    <%= f.text_area :apply_information %>
  </div>
  <div class="actions">
    <%= link_to "预览", "#preview", :class => "preview" %>
    <%= f.submit "确认提交" %>
  </div>
<% end %>
