<p class='post-job clearfix'>
  <%= link_to '发布新工作', new_job_path %>
</p>

<table class='joblist' cellspacing="0">
  <thead>
    <tr>
      <th>张贴<br/>日期</th>
      <th>工作职称</th>
      <%unless mobile_device? %>
        <th>公司<br/>名称</th>
        <th>工作</br>地点</th>
      <%end%>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td>
          <%= link_to job.company_name, job %>
        </td>
        <%unless mobile_device? %>
          <td><%= job.occupation %></td>
          <td><%= job.location %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>


